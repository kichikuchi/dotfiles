syntax on
au BufReadPost,BufNewFile *.t :setl filetype=perl
set cindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set nocompatible
filetype indent plugin on
set hidden
set wildmenu
set showcmd
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
set visualbell
set t_vb=
set mouse=a
set cmdheight=2
set number
set notimeout ttimeout ttimeoutlen=200
set pastetoggle=<F11>
set expandtab
noremap j gj
noremap k gk
noremap gj j
noremap gk k
noremap ; :
noremap : ;
